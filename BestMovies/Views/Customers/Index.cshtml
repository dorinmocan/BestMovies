@model List<BestMovies.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table width = "500" border="0">
    @if (Model.Count == 0)
    {
        <div>We don't have any customers yet.</div>
    }
    else
    {
        <thead>
            <tr>
                <td><b>Customer</b></td>
                <td><b>Membership Type</b></td>
            </tr>
        </thead>
        foreach (var customer in Model)
        {
        <tr>
            <td>
                @Html.ActionLink(customer.FirstName + " " + customer.LastName, "Details", new { id = customer.Id })
            </td>
            <td>
                @customer.MembershipType.Name
            </td>
        </tr>
        }
    }
</table>
