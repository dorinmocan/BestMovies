@model List<BestMovies.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count == 0)
{
    <div>We don't have any movies yet.</div>
}
else
{
    foreach (var movie in Model)
    {
        <div>@Html.ActionLink(movie.Title, "Details", new { id = movie.Id })</div>
    }
}
