@model List<BestMovies.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table width="500" border="0">
    @if (Model.Count == 0)
    {
        <div>We don't have any movies yet.</div>
    }
    else
    {
        <thead>
            <tr>
                <td><b>Movie</b></td>
                <td><b>Genre</b></td>
            </tr>
        </thead>
        foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Title, "Details", new { id = movie.Id })
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    }
</table>
