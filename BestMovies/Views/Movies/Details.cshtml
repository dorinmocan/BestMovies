@model BestMovies.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
<ul>
    <li><b>Genre:</b> @Model.Genre.Name</li>
    <li><b>Release Date:</b> @Model.ReleaseDate.ToLongDateString()</li>
    <li><b>Date Added:</b> @Model.AddedOn.ToLongDateString()</li>
    <li><b>Number in Stock:</b> @Model.NumberInStock</li>
</ul>
